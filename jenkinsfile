pipeline {
    agent any

    environment {
        DEPLOY_USER = 'ec2-user'
        DEPLOY_HOST = '3.82.100.190'
        APP_DIR = '/home/ec2-user/node-js-sample-jenkins'
        REPO_URL = 'https://github.com/iamtruptimane/node-js-sample-jenkins.git'
    }

    stages {
        stage('Clone Code') {
            steps {
                echo 'üì• Cloning the repository...'
                git url: "${REPO_URL}", branch: 'master'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'üì¶ Installing dependencies...'
                sh 'npm install'
            }
        }

        stage('Deploy to Deployment Server') {
            steps {
                echo 'üöÄ Deploying to the EC2 instance...'

                sshagent(['ssh-key']) {
                    script {
                        def deployScript = """
                            echo '‚úÖ Connected to deployment server'

                            # Install pm2 if not already installed
                            which pm2 || {
                                echo 'Installing pm2...'
                                sudo -S npm install -g pm2
                            }

                            # Clone or update the application
                            if [ ! -d "${APP_DIR}" ]; then
                                echo 'Cloning repo on deployment server...'
                                git clone ${REPO_URL} ${APP_DIR}
                            else
                                echo 'Pulling latest changes...'
                                cd ${APP_DIR}
                                git pull origin master
                            fi

                            cd ${APP_DIR}

                            # Install dependencies
                            echo 'Installing dependencies on deployment server...'
                            npm install

                            # Restart the application
                            echo 'Restarting application...'
                            pm2 stop all || true
                            pm2 start index.js --name app
                            pm2 save
                        """

                        sh "ssh -o StrictHostKeyChecking=no ${DEPLOY_USER}@${DEPLOY_HOST} '${deployScript}'"
                    }
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Deployment succeeded.'
        }
        failure {
            echo '‚ùå Deployment failed. Check Jenkins logs.'
        }
    }
}
