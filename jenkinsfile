pipeline {
    agent any

    environment {
        DEPLOY_USER = 'ec2-user'
        DEPLOY_HOST = '54.153.65.92' // updated deployment server IP
    }

    stages {
        stage('Clone Code') {
            steps {
                git url: 'https://github.com/iamtruptimane/node-js-sample-jenkins.git', branch: 'master'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Deploy to Deployment Server') {
            steps {
                sshagent(['ec2-user']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no $DEPLOY_USER@$DEPLOY_HOST << EOF
                        echo "✅ Connected to deployment server"
                        # Add deployment commands here
                        # Example:
                        # cd /home/ec2-user/app
                        # git pull
                        # npm install
                        # pm2 restart app
                        EOF
                    '''
                }
            }
        }
    }

    post {
        failure {
            echo '❌ Deployment failed. Check Jenkins logs.'
        }
        success {
            echo '✅ Deployment succeeded.'
        }
    }
}
